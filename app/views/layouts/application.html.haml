!!!
%html
  %head
    %meta{ content: 'text/html; charset=UTF-8', 'http-equiv': 'Content-Type'}/
    %title Floodapp
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': true
    %link{ rel: 'stylesheet', href: 'https://fonts.googleapis.com/icon?family=Material+Icons'}
    %link{ rel: 'stylesheet', href: 'https://code.getmdl.io/1.1.3/material.indigo-pink.min.css'}
    = javascript_include_tag 'application', 'data-turbolinks-track': true
    = csrf_meta_tags
  %body.layout-waterfall.mdl-color--grey-100.mdl-color-text--grey-700.mdl-base
    .mdl-layout.mdl-js-layout
      %header.mdl-layout__header.mdl-layout__header--waterfall
        .mdl-layout__header-row
          %span.mdl-layout-title
            = t('.title')
          .mdl-layout-spacer
          .mdl-textfield.mdl-js-textfield.mdl-textfield--expandable.mdl-textfield--floating-label.mdl-textfield--align-right
            %label.mdl-button.mdl-js-button.mdl-button--icon{for: 'text-search'}
              %i.material-icons><search
            .mdl-textfield__expandable-holder
              %input#text-search.mdl-textfield__input{name: 'sample', type: 'text'}/
        .mdl-layout__header-row
          .mdl-layout-spacer
          %nav.mdl-navigation
            %a.mdl-navigation__link{href: sentences_sampler_path}
              = t('.sentences_select')
      .mdl-layout__drawer
        %span.mdl-layout-title
          = t('.title')
        %nav.mdl-navigation
          %a.mdl-navigation__link{href: sentences_sampler_path}
            = t('.sentences_select')
      %main.mdl-layout__content
        .mdl-layout__tab-panel.is-active
          = yield
